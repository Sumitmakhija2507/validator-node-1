# RapidX Validator Node Configuration

# Node Identity
VALIDATOR_ID=validator-1
VALIDATOR_NAME="RapidX Validator #1"
VALIDATOR_WALLET_ADDRESS=0x...

# Network Configuration
NODE_ENV=production
PORT=8080
HOST=0.0.0.0

# TSS Configuration (will be generated during DKG ceremony)
TSS_PARTY_ID=1
TSS_THRESHOLD=3
TSS_TOTAL_PARTIES=5

# RPC Endpoints for Multi-Chain Support
# EVM Chains
ETHEREUM_RPC=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
BSC_RPC=https://bsc-dataseed1.binance.org
POLYGON_RPC=https://polygon-rpc.com
ARBITRUM_RPC=https://arb1.arbitrum.io/rpc
OPTIMISM_RPC=https://mainnet.optimism.io
AVALANCHE_RPC=https://api.avax.network/ext/bc/C/rpc
FANTOM_RPC=https://rpc.ftm.tools
BASE_RPC=https://mainnet.base.org

# Signal Contract Addresses (REQUIRED for event listening)
# These addresses must be configured for the validator to listen to SignalSent events
ETHEREUM_SIGNAL_ADDRESS=0x...
BSC_SIGNAL_ADDRESS=0x...
POLYGON_SIGNAL_ADDRESS=0x...
ARBITRUM_SIGNAL_ADDRESS=0x...
OPTIMISM_SIGNAL_ADDRESS=0x...
AVALANCHE_SIGNAL_ADDRESS=0x...
FANTOM_SIGNAL_ADDRESS=0x...
BASE_SIGNAL_ADDRESS=0x...

# Bridge Contract Addresses (Optional - for token bridging)
ETHEREUM_BRIDGE_ADDRESS=0x...
BSC_BRIDGE_ADDRESS=0x...
POLYGON_BRIDGE_ADDRESS=0x...
ARBITRUM_BRIDGE_ADDRESS=0x...
OPTIMISM_BRIDGE_ADDRESS=0x...
AVALANCHE_BRIDGE_ADDRESS=0x...
FANTOM_BRIDGE_ADDRESS=0x...
BASE_BRIDGE_ADDRESS=0x...

# Non-EVM Chains
SOLANA_RPC=https://api.mainnet-beta.solana.com
COSMOS_RPC=https://rpc.cosmos.network
TON_RPC=https://toncenter.com/api/v2/jsonRPC

# Database
DATABASE_URL=postgresql://validator:password@localhost:5432/rapidx_validator
REDIS_URL=redis://localhost:6379

# Orchestrator Connection
ORCHESTRATOR_URL=https://orchestrator.rapidx.io
ORCHESTRATOR_WS=wss://orchestrator.rapidx.io/ws
ORCHESTRATOR_API_KEY=your_api_key_here

# Monitoring & Metrics
PROMETHEUS_PORT=9090
ENABLE_METRICS=true
LOG_LEVEL=info

# Revenue Wallet
REVENUE_WALLET_ADDRESS=0x...
MIN_PAYOUT_AMOUNT=100

# Security
JWT_SECRET=your_secret_key_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cloud Provider (gcp, aws, private)
CLOUD_PROVIDER=gcp
REGION=us-central1

# Health Check
HEALTH_CHECK_INTERVAL=30000
MAX_MISSED_HEARTBEATS=3

# Slashing Protection
ENABLE_SLASHING_PROTECTION=true
MAX_SIGNING_TIMEOUT=60000
